<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Stephanie Pinion Portfolio", sticky: false ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Stephanie Pinion Portfolio", sticky: false ) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Stephanie Pinion Portfolio", sticky: false ) %>
<% end %>